<Window x:Class="Pz_26.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pz_26"
        mc:Ignorable="d"
        Title="Элементы управления" Height="500" Width="500">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top">
            <Button x:Name="acceptButton" Content="ОК" IsDefault="True" Click="acceptButton_Click" />
            <Button x:Name="escButton" Content="Выход" IsCancel="True" Click="escButton_Click" />
            <Menu MinHeight="20"></Menu>
            <WrapPanel MinHeight="20"></WrapPanel>
        </StackPanel>
        <StatusBar MinHeight="20" DockPanel.Dock="Bottom">
            <Button x:Name="button1" Width="60" Height="30" Content="Нажать" Click="Button_Click" />
        </StatusBar>
        <ListBox MinWidth="200" DockPanel.Dock="Left"></ListBox>
        <RichTextBox></RichTextBox>
    </DockPanel>
</Window>
